<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.varunbadgujar.mycalculator.MainActivity">

    <TableLayout
        android:id="@+id/TableLayoutDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"

        >

        <TableRow
            android:layout_marginTop="20sp"
            android:weightSum="6"
            android:padding="20sp">


            <EditText
                android:id="@+id/EditTextNo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:textColorHint="@color/colorGrey"
                android:textColor="@color/Colortheme"
                android:layout_weight="2"
                android:ems="6"
                android:hint="@string/hint_No1"
                android:textAlignment="center"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/EditTextOperand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:textColor="@color/Colortheme"
                android:textColorHint="@color/colorGrey"
                android:layout_weight="2"
                android:ems="3"
                android:hint="@string/hint_Operand"
                android:textAlignment="center"
                android:textSize="20sp"
                android:maxLength="1"/>


            <EditText
                android:id="@+id/EditTextNo2"
                android:layout_width="wrap_content"
                android:textColor="@color/Colortheme"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_weight="2"
                android:textColorHint="@color/colorGrey"
                android:ems="6"
                android:hint="@string/hint_No2"
                android:textAlignment="center"
                android:textSize="20sp"


                />


        </TableRow>


        <TableRow>


        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/ResultDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/TableLayoutDisplay"
        android:layout_below="@id/TableLayoutDisplay"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_weight="2"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/Colortheme"
        android:ems="6"
        android:hint="@string/hint_Result"
        android:inputType="none"
        android:textAlignment="center"
        android:textSize="20sp" />


    <TableLayout
        android:id="@+id/TableLayoutKeypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ResultDisplay"
        android:layout_marginTop="15sp">

        <TableRow

            android:weightSum="5">

            <Button
                android:id="@+id/no1"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_weight="1"
                android:background="@drawable/button_drawable"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/no2"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/no3"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/addbt"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button2_drawable"
                android:layout_weight="1"
                android:text="+"
                android:textSize="20sp" />

        </TableRow>


        <TableRow
            android:layout_marginTop="0sp"
            android:weightSum="5">

            <Button
                android:id="@+id/no4"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/no5"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/no6"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/subbt"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button2_drawable"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20sp" />

        </TableRow>


        <TableRow
            android:layout_marginTop="0sp"
            android:weightSum="5">

            <Button
                android:id="@+id/no7"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/no8"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/no9"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:background="@drawable/button_drawable"
                android:layout_marginLeft="0sp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/mulbt"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button2_drawable"
                android:layout_weight="1"
                android:text="*"
                android:textSize="20sp" />

        </TableRow>


        <TableRow
            android:layout_marginTop="0sp"
            android:weightSum="5">

            <Button
                android:id="@+id/backspace"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="del"
                android:textSize="20sp" />

            <Button
                android:id="@+id/no0"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dotbt"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button_drawable"
                android:layout_weight="1"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/divbt"
                android:layout_width="90sp"
                android:layout_height="82sp"
                android:layout_marginLeft="0sp"
                android:background="@drawable/button2_drawable"
                android:layout_weight="1"
                android:text="/"
                android:textSize="20sp" />

        </TableRow>


    </TableLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ResultDisplay"
        android:layout_alignTop="@+id/ResultDisplay"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        app:backgroundTint="#009688"
        app:fabSize="normal"
        android:src="@drawable/ic_done"
        app:rippleColor="@color/colorGrey"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/TableLayoutKeypad"
        android:background="@color/colorWhite"
        />


</RelativeLayout>
